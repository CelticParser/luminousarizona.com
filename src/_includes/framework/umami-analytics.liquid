{% assign u_data_domain = null %}
{% assign u_src = null %}

{% if env.UMAMI_DATA_WEBSITE_ID %}
  {% assign u_data_domain = env.UMAMI_DATA_WEBSITE_ID %}
{% elsif site.analytics.umami_data_website_id and site.analytics.umami_data_website_id != '' %}
  {% assign u_data_domain = site.analytics.umami_data_website_id %}
{% endif %}

{% if env.UMAMI_SRC %}
  {% assign u_src = env.UMAMI_SRC %}
{% elsif site.analytics.umami_src and site.analytics.umami_src != '' %}
  {% assign u_src = site.analytics.umami_src %}
{% endif %}

{% if u_data_domain and u_src %}
    <script async defer src="{{ u_data_domain }}" data-website-id="{{ u_src }}"></script>
{% endif %}