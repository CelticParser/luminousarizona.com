---
layout: default
body_classes: page-categories
---

<div class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">
        {% include 'framework/heading',
          title:title
          description:description
          image:image
        %}
      </div>
    </div>
  </div>
</div>

<div class="section strip-base">
  <div class="container">
    <div class="row">
        {% for category in collections.categoryList %}
          {% assign category_name = category[0] %}
          {% assign category_slug = category_name | slugify %}
          <div class="col-12 col-md-8 mb-2">
            <h3 id="#{{ category_slug }}">{{ category_name }}</h3>
            {% for post in collections.categoryList[category_name] reversed %}
              <div>
                <a href="{{ post.url }}">{{post.data.title}}</a>
              </div>
            {% endfor %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>