{% capture header_classes %}
  {% if site.header.align %}header-{{ site.header.align}} {% endif %}{% if site.header.fixed %}header-fixed {% endif %}{% if header_transparent %}header-transparent {% endif %}{{ header_classes }}
{% endcapture %}

<div id="header" class='header {{ header_classes | strip }}'>
  <div class="container">
    {% include "framework/logo" %}
    {% include "framework/menu-main" %}
    {% if site.darkmode.enable_dark_mode and site.darkmode.show_dark_mode_toggle_in_header %}
      {% include "framework/dark-mode-switcher" %}
    {% endif %}
    {% include "framework/hamburger" %}
  </div>
</div>
