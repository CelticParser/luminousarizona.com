---
layout: default
body_classes: page-post
permalink: "/blog/{{ title | slug }}/index.html"
---

<div class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12">
        {% include 'framework/heading',
          title:title
          description:description
          image:image
        %}
      </div>
    </div>
  </div>
</div>

<div class="section pt-0">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">
        
        {% if page.authors %}
          <div class="mb-2">
          {% for author in page.authors %}
            {% include 'framework/author',
            author:author
            style:'row'
            show_author_name:true
          %}
          {% endfor %}
          </div>
        {% endif %}
        
        <div class="content">{{ content }}</div>

        {% if categories %}
        <div class="categories">
        {% include 'framework/categories-badges',
            categories:categories
        %}
        {% endif %}
        </div>

        {% include 'framework/comments' %}

      </div>
    </div>
  </div>
</div>

{% if site.newsletter.mailchimp.form_action_url and site.newsletter.mailchimp.form_action_url != '' %}
  <div class="section section-base-bg-2">
    <div class="container">
      <div class="row">
        <div class="col-12"></div>
        {% include 'framework/subscribe' %}
        </div>
      </div>
    </div>
  </div>
{% endif %}
