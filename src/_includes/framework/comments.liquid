    {% if site.comments.commento.enabled %}
        <div class="comments">
            {% include 'framework/commento' %}
        </div>
    {% endif %}

    {% if site.comments.disqus.shortname and site.comments.disqus.shortname != '' %}
        <div class="comments">
            {% include 'framework/disqus' %}
        </div>
    {% endif %}

{% endif %}